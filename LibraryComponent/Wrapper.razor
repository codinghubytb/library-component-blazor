<div class="ch-wrapper" style="
        background: @BackgroundColor;">
    @ItemTemplate
</div>

<style>
    .ch-wrapper {
        max-width: 690px;
        width: 100%;
        padding: 30px;
        border-radius: 7px;
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08), 0 12px 16px rgba(0, 0, 0, 0.08), 0 4px 8px rgba(0, 0, 0, 0.03);
    }

</style>

@code {

    [EditorRequired]
    [Parameter]
    public RenderFragment ItemTemplate { get; set; } = default!;

    [Parameter]
    public string BackgroundColor { get; set; } = "#fff";
}

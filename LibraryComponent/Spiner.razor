<span class="loader"></span>

<style>
    @KeyframesStyle
</style>

@code {
    // Parameter to set the color of the loader's border.
    [Parameter]
    public string Color { get; set; } = "#000"; // Default color is black.

    // Generates the CSS for the loader animation using the specified color.
    private string KeyframesStyle => $@"
    .loader {{
        width: 48px; /* Sets the width of the loader */
        height: 48px; /* Sets the height of the loader */
        border: 5px solid {Color}; /* Creates a border with the specified color */
        border-bottom-color: transparent; /* Makes the bottom part of the border transparent to create the spinning effect */
        border-radius: 50%; /* Makes the loader circular */
        display: inline-block; /* Ensures the loader stays inline with other elements */
        box-sizing: border-box; /* Includes the border in the element's total width and height */
        animation: rotation 1s linear infinite; /* Sets the rotation animation to run continuously */
    }}

    @keyframes rotation {{
        0% {{
            transform: rotate(0deg); /* Initial position of the loader */
        }}
        100% {{
            transform: rotate(360deg); /* Rotates the loader 360 degrees for the spinning effect */
        }}
    }}
    ";
}

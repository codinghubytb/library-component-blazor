<h1>
    @Text
</h1>

<style>

    h1 {
        text-align:center;
        color: @TextColor;
        padding: 30px 20px 20px;
        font-size: 24px;
        width: 100%;
    }

</style>

<style>
    @MediaWidthStyle
</style>

@code{

    [Parameter]
    public string Text { get; set; } = default!;

    [Parameter]
    public string TextColor { get; set; } = "#000";

    public string MediaWidthStyle = @"
@media (min-width: 600px) {
    main h1 {
        max-width: 500px;
        margin: auto;
    }
}";
}
<div class="ch-center" style="
        background: @BackgroundColor;">
    @ItemTemplate
</div>

<style>
    .ch-center {
        padding: 1rem;
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

@code {

    [EditorRequired]
    [Parameter]
    public RenderFragment ItemTemplate { get; set; } = default!;

    [Parameter]
    public string BackgroundColor { get; set; } = "#fff";
}
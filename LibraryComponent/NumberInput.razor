<div class="ch-number-input">
    <input type="number" class="ch-input" style="
            color: @TextColor;" min=@Min max=@Max placeholder=@Placeholder @bind="Value" @oninput="OnValueChanged" disabled=@Disabled></input>
</div>

<style>

    .ch-number-input {
        border-radius: 5px;
        border: 1px solid #ccc;
        display: flex;
        border-bottom: 1px solid #ccc;
        width : 100%;
    }

        .ch-number-input .ch-input {
            width: 100%;
            border: none;
            outline: none;
            resize: none;
            background: none;
            font-size: 18px;
            padding: 10px 15px;
            border-radius: 5px;
        }

            .ch-number-input .ch-input::placeholder {
                color: #b7b6b6;
            }

            .ch-number-input .ch-input::-webkit-scrollbar {
                width: 4px;
            }

            .ch-number-input .ch-input::-webkit-scrollbar-track {
                background: #fff;
            }

            .ch-number-input .ch-input::-webkit-scrollbar-thumb {
                background: #ddd;
                border-radius: 8px;
            }

</style>

@code {
    [Parameter]
    public int Value { get; set; } = default!;

    [Parameter]
    public int Min { get; set; } = 0;

    [Parameter]
    public int Max { get; set; } = 100;

    [Parameter]
    public string Placeholder { get; set; } = default!;

    [Parameter]
    public string TextColor { get; set; } = "#000";

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public EventCallback<int> ValueChanged { get; set; }

    private void OnValueChanged(ChangeEventArgs e)
    {
        Value = int.Parse(string.IsNullOrEmpty(e.Value.ToString()) ? "0" : (e.Value.ToString()));
        ValueChanged.InvokeAsync(Value);
    }
}